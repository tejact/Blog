{{#partial "content"}}
    <form action="/create-blog" method="post">
        <fieldset>
            <legend>Create a new blog</legend>

            <input type="text" class="blog-title" name="blog-title" placeholder="Title here">
            <textarea name="blog-body" class="blog-body" placeholder="Content here"></textarea>

        </fieldset>
        <button type="submit" class="btn-default">Create blog!!!</button>
    </form>
{{/partial}}
{{> base.hbs}}